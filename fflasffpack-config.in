prefix=@prefix@
exec_prefix=@exec_prefix@
includedir=@includedir@
libdir=@libdir@

usage()
{
    cat <<EOF
Usage: fflasffpack-config [OPTION]

Known values for OPTION are:

  --prefix		 		show Givaro installation prefix 
  --libs		 		print library linking information
  --blas-libs			print BLAS library linking information
  --cflags				print pre-processor and compiler flags
  --blas-cflags	 		print BLAS pre-processor and BLAS compiler flags
  --blas-home	 		print where BLAS were found
  --help		 		display this help and exit
  --version		     	output version information
  --decimal-version	 	output version in decimal representation (base 100)

EOF

    exit $1
}

if test $# -eq 0; then
    usage 1
fi

major=`echo @VERSION@ | cut -d'.' -f1`
minor=`echo @VERSION@ | cut -d'.' -f2`
micro=`echo @VERSION@ | cut -d'.' -f3`
decvr=$((((($major*100)+$minor)*100)+$micro))



cflags=false
libs=false

while test $# -gt 0; do
	case "$1" in
		-*=*) 
			optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` 
			;;
		*) 
			optarg= 
			;;
	esac

	case "$1" in
		--prefix=*)
			prefix=$optarg
			;;

		--prefix)
			echo $prefix
			;;

		--version)
			echo @VERSION@
			exit 0
			;;

		--decimal-version)
			echo $decvr
			exit 0
			;;

		--help)
			usage 0
			;;

		--cflags)
			echo -I${includedir}  @GMP_CFLAGS@ @GIVARO_CFLAGS@ @CBLAS_FLAG@
			;;

		--blas-cflags)
			echo -I${includedir} @CBLAS_FLAG@
			;;

		--libs)
			echo  @GMP_LIBS@ @GIVARO_LIBS@ @BLAS_LIBS@ 
			;;

		--blas-libs)
			echo  @BLAS_LIBS@ 
			;;
	
		--blas-home)
			echo  @BLAS_PATH@ 
			;;

		*)
			usage
			exit 1
			;;
	esac
	shift
done

exit 0
