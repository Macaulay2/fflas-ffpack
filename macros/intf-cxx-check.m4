			echo ''
			echo '*******************************************************************************'
			echo ' ERROR: missing file required to build CXX interfaces!'
			echo ' Please make sure cxx is correctly installed and all the required files exist'
			echo '*******************************************************************************'
			exit 1
		fi
		AC_SUBST(INTF_INC_CXX_PATH, ${TOPDIR}/fflas-ffpack/interfaces/src/include)
		AC_SUBST(INTF_SRC_CXX_PATH, ${TOPDIR}/fflas-ffpack/interfaces/src/cxx)
		AC_SUBST(INTF_BIN_CXX_PATH, ${TOPDIR}/fflas-ffpack/interfaces/src/lib)
	else
		AC_MSG_RESULT(no)
	fi
	AC_SUBST(INTF_CXX_USED)
	AM_CONDITIONAL([INTF_CXX_USED], [test x$INTF_CXX_USED = xtrue])
])
