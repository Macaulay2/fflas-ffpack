OPTFLAGS+=-O3
#OPTFLAGS+=-g
OPTFLAGS+= ${ARCH}

CXXFLAGS+=${OPTFLAGS} 

INCLUDES+=-I. -I../include 


CXX=g++ ${INCLUDES}

